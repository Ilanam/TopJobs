<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="crudcompany.Companys" table="COMPANY">
  
      <id name="companyid" type="int">
            <column name="COMPANYID" />
            <generator class="assigned" />
        </id>
        <property name="companyname" type="string">
            <column name="COMPANYNAME" length="100" />
        </property>
        <property name="post" type="string">
            <column name="POST" length="100" />
        </property>
        <property name="companyaddress" type="string">
            <column name="COMPANYADDRESS" length="100" />
        </property>
        <property name="stream" type="string">
            <column name="STREAM" length="100" />
        </property>
        <property name="skill" type="string">
            <column name="SKILL" length="100" />
        </property>
        <property name="openingdate" type="date">
            <column name="OPENINGDATE" length="10" />
        </property>
        <property name="closingdate" type="date">
            <column name="CLOSINGDATE" length="10" />
        </property>
    </class>
  
</hibernate-mapping>
